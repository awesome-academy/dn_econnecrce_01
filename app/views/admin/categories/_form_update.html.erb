<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [:admin, @category], remote: true,
      html: {style: "display:inline;"} do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="form-group">
          <%= f.label t("categories.name_category"), class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <%= f.fields_for :products do |builder| %>
          <%= render "form_product", f: builder %>
        <% end %>
      </div>
      <div class="">
        <%= link_to_add_association t("categories.link_add_product"), f, :products,
        partial: "form_product" %>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to t("categories.btn_cancel"), "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
