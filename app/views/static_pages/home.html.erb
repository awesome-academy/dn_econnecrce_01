<% provide(:title, t("home_page.text_title")) %>
<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="main_title">
      <h2><span><%= t "home_page.title_page" %></span></h2>
      <p><%= t "home_page.title_description" %></p>
    </div>
  </div>
</div>
<div class="row">
  <% if @products.any? %>
    <% @products.each do |product|%>
      <div class="col-lg-6">
        <div class="new_product">
          <h5 class="text-uppercase"><%= t "home_page.title_subtitle" %></h5>
          <h3 class="text-uppercase"><%= product.name %></h3>
          <div class="product-img">
            <% if product.image.attached? %>
              <%= image_tag(product.image, class: "img-fluid") %>
            <% end %>
          </div>
          <h4><%= transform(product.description, Settings.string_view) %></h4>
          <h4><%= number_to_currency(product.unit_price) %></h4>
          <li><%= link_to t("home_page.btn_addcart"),
            cart_add_item_path(product.id), method: :post, class: "main_btn" %>
          </li>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
