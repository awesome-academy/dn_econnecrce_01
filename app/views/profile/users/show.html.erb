<div class="row">
  <div class="col-sm-10"><h1><%= @user.username %></h1></div>
  <div class="col-sm-3">
    <div class="text-center">
      <% if @user.image.attached? %>
        <%= image_tag(@user.image, class: "avatar img-circle img-thumbnail") %>
      <% end %>
    </div></hr><br>
    <ul class="list-group">
      <li class="list-group-item text-muted"><%= t "profile.infor" %>
        <i class="fa fa-dashboard fa-1x"></i>
      </li>
      <li class="list-group-item text-right">
        <span class="pull-left"><strong><%= t "profile.phone" %></strong></span>
        <%= @user.phone_number %>
      </li>
      <li class="list-group-item text-right">
        <span class="pull-left"><strong><%= t "profile.email" %></strong></span>
        <%= @user.email %></li>
      </ul>
      <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="panel-body">
          <%= t "profile.address" %>
          <span><%= @user.address %></span>
        </div>
      </div>
      <%= link_to t("profile.btn_update"), edit_profile_user_path(@user.id), class: "main_btn" %>
    </div>
    <div class="col-sm-9">
      <hr>
      <div class="col-sm-10"><h1><%= t "profile.history" %></h1>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="table-responsive-sm">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th class="center"><%= t "profile.tbl_dau" %></th>
                  <th ><%= t "profile.tbl_created" %></th>
                  <th class="center"><%= t "profile.tbl_quantity" %></th>
                  <th class="right"><%= t "profile.tbl_total" %></th>
                  <th class="right"><%= t "profile.purchase_status" %></th>
                  <th class="right"><%= t "profile.lbl_detail" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render(partial: "purchases/purchase", collection: @purchases) %>
              </tbody>
            </table>
            <%= will_paginate @purchases %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
