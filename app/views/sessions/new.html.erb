<% provide(:title, t("admin.title_login")) %>
<div class="login-form">
  <%= form_for(:session, url: login_path) do |f| %>
  <h2 class="text-center"><%= t "admin.text_page" %></h2>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Username",required: "required" %>
  </div>
  <div class="form-group">
   <%= f.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <div class="form-group">
   <%= f.submit t("admin.text_page"), class: "btn btn-primary btn-block" %>
  </div>
  <div class="clearfix">
  <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
  <a href="#" class="pull-right">Forgot Password?</a>
  </div>
<% end %>
<p class="text-center"><a href="#">Create an Account</a></p>
</div>
